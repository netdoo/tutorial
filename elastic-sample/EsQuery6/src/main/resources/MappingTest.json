{
    "market": {
        "properties": {
            "name": {
                "type": "keyword",
                "index": true
            },
            "price" : {
                "type": "long",
                "index": true
            },
            "country" : {
                "type" : "text",
                "index" : true
            },
            "products" : {
                "type" : "nested",
                "properties" : {
                    "label" : {"type" : "text", "index" : true, "fielddata" : true},
                    "price" : {"type" : "long"},
                    "count" : {"type" : "integer"},
                    "review"  : {
                        "type" : "nested",
                        "properties" : {
                            "star" : {"type" : "integer"},
                            "message" : {"type" : "text", "index" : true},
                            "like" : {"type" : "boolean"}
                        }
                    }
                }
            }
        }
    }
}
